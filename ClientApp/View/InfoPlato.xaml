<Window x:Class="ClientApp.View.InfoPlato"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp.View"
        mc:Ignorable="d"
        Title="InfoPlato" Height="768" Width="1366"
        WindowState="Maximized" WindowStyle="None">
    <DockPanel>
        <Border DockPanel.Dock="Top" BorderBrush="Black" BorderThickness="0,0,0,2" Padding="5">
            <TextBlock FontSize="35"  TextAlignment="Center" >Hamburguesa de pollo</TextBlock>
        </Border>
        
        <DockPanel DockPanel.Dock="Bottom" Height="70">
            <Button Width="120" DockPanel.Dock="Left" FontSize="20">Atrás</Button>
            <Button Width="120" DockPanel.Dock="Right" FontSize="20">Añadir</Button>
            <TextBlock FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Run>Total : </Run>
                <Run>X€ </Run>
            </TextBlock>
        </DockPanel>
        <DockPanel >
            <Border Margin="20" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                <Image Width="400" ></Image>
            </Border>
            <DockPanel Margin="50,20,50,0">

                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" DockPanel.Dock="Top">
                    <StackPanel>
                        <TextBlock FontSize="20" Background="Purple" TextAlignment="Center" >Ingredientes</TextBlock>
                        <StackPanel>

                            <TextBlock FontSize="15" TextAlignment="Center">Ingrediente 1</TextBlock>
                            <TextBlock FontSize="15" TextAlignment="Center">Ingrediente 2</TextBlock>
                            <TextBlock FontSize="15" TextAlignment="Center">Ingrediente 3</TextBlock>
                            <TextBlock FontSize="15" TextAlignment="Center">Ingrediente 4</TextBlock>
                        </StackPanel>
                    </StackPanel>                    
                </Border>

                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Center">
                    <TextBlock FontSize="20" TextAlignment="Center">Cantidad</TextBlock>
                    <TextBlock FontSize="20" TextAlignment="Center">(Control + 5 - )</TextBlock>
                    
                </StackPanel>

            </DockPanel>
        </DockPanel>
        
       
    </DockPanel>
</Window>
